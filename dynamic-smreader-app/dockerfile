FROM alpine:latest

WORKDIR /usr/src/app

RUN apk update && apk add firefox python3 py-pip
#RUN apk update && apk add py-pip

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY app.py ./

COPY . .

# Run the Flask application
#CMD [ "python3", "app.py"]
CMD [ "python3", "test.py"]
